rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is Admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrator';
    }

    // Helper function to validate College Schema
    function isValidCollege() {
      let data = request.resource.data;
      return data.keys().hasAll(['name', 'emailId', 'website', 'address', 'contactPhone', 'status', 'createdAt']) &&
             data.name is string && data.name.size() > 0 &&
             data.emailId is string && data.emailId.size() > 0 &&
             data.website is string &&
             data.address is string &&
             data.contactPhone is string &&
             data.status in ['Active', 'Suspended'] &&
             data.createdAt is string; // ISO Timestamp check
    }

    // COLLEGE SCHEMA RULES
    match /colleges/{collegeId} {
      // Anyone can read colleges (for login selection)
      allow read: if true;
      
      // Only Admins can create/update/delete colleges
      // AND data must match the schema
      allow create: if request.auth != null && isAdmin() && isValidCollege();
      allow update: if request.auth != null && isAdmin() && isValidCollege();
      allow delete: if request.auth != null && isAdmin();
    }

    // USER SCHEMA RULES
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // Allow signup
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Other collections (simplified for brevity)
    match /competitions/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
    
    match /projects/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /teams/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /announcements/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
    
    match /system_logs/{document=**} {
       allow read, write: if request.auth != null;
    }
  }
}